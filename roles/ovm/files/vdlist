find /OVS/Repositories -name vm.cfg -print | xargs grep -H -e 'disk =' -e 'OVM_simple_name' | awk --source '/OVM_simple_name/ {split($0, arr, ":"); split(arr[2], arr2, "="); print arr[1] "    " substr(arr2[2], 3, length(arr2[2]) - 3)} /disk =/ {count = split($0,arrfile,"file:"); for ( i = 2; i <= count; i++) { split(arrfile[i],  arrdisk, ","); print arrdisk[1] "    " arrdisk[2] }; print "" }'